#!/bin/sh

XDPREFIX=/opt/xbaydns

#pre init check env var
#-------------------------------------
if [ -z "${XDPREFIX}" ]
then
    echo "XDPREFIX is not init"
    exit 1
fi

masterstartup(){
killall named >& /dev/null
${XDPREFIX}/named/sbin/named -t ${XDPREFIX}/named -u named
/bin/sh ${XDPREFIX}/bin/xdweb >& ${XDPREFIX}/named/var/log/xdweb.log &
}

if [ -f ${XDPREFIX}/named/sbin/named -a -f ${XDPREFIX}/bin/xdweb ]
then
    masterstartup
    exit 0
elif [ $# != 2 ]; then
    echo "First time Usage: $0 <master_ip> <path_to_bind_chroot>"
    exit 1
fi

MASTERIP=$1
BINDCHROOT=$2

#pre init check env var
#-------------------------------------
if [ -z "${XDPREFIX}" ]
then
    echo "XDPREFIX is not init"
    exit 1
fi

#1.init sync&cron enviroment 
#===========================

#1.1 prepare restrictive shell - smrsh
#-------------------------------------
if [ -x /usr/sbin/smrsh ];then
    # CentOS
    SMRSH_CMD=/usr/sbin/smrsh
    SMRSH_ALLOWCMD_DIR=/etc/smrsh
elif [ -x /usr/lib/sendmail.d/bin/smrsh ];then
    # OpenSuSE
    SMRSH_CMD=/usr/lib/sendmail.d/bin/smrsh
    SMRSH_ALLOWCMD_DIR=/usr/lib/sendmail.d/bin
elif [ -x /usr/libexec/smrsh ];then
    # FreeBSD
    SMRSH_CMD=/usr/libexec/smrsh
    SMRSH_ALLOWCMD_DIR=/usr/libexec/sm.bin
else
    echo "Error: can't find smrsh, exiting!"
    exit 1
fi

if ! which rsync > /dev/null 2>&1 ; then
    echo "Error: can't find rsync, exiting!"
    exit 1
fi

if ! grep smrsh /etc/shells >/dev/null 2>&1 ; then
   echo "$SMRSH_ALLOWCMD_DIR/smrsh">>/etc/shells
fi

rm -f $SMRSH_ALLOWCMD_DIR/rsync
ln -s `which rsync` $SMRSH_ALLOWCMD_DIR/

#1.2 make user(xbaydns) for sync
#-----------------------------------
rm -rf ${XDPREFIX}/home/xbaydns
userdel xbaydns
useradd xbaydns -g named -s $SMRSH_CMD -d ${XDPREFIX}/home/xbaydns

#why remove dir again?
#rm -rf  ${XDPREFIX}/home/xbaydns
mkdir -p ${XDPREFIX}/home/xbaydns
mkdir -p ${XDPREFIX}/home/xbaydns/{.ssh,prog,view,slave,agent}
mkdir -p ${XDPREFIX}/home/xbaydns/view/{iplatency,idcview}
mkdir -p ${XDPREFIX}/home/xbaydns/slave/{prog,named/{log,etc/{acl,view,dynamic}}}
mkdir -p ${XDPREFIX}/home/xbaydns/agent/{prog,iplatency}

touch ${XDPREFIX}/home/xbaydns/.ssh/authorized_keys

cp -r `${XDPREFIX}/bin/xdwherepkg`/xbaydns/tools/prober/* ${XDPREFIX}/home/xbaydns/agent/prog
chmod +x ${XDPREFIX}/home/xbaydns/agent/prog/*
echo "MASTER_IP=\"$MASTERIP\"">${XDPREFIX}/home/xbaydns/agent/agent.conf
echo "MASTER_IP=\"$MASTERIP\"">${XDPREFIX}/home/xbaydns/master.conf


cp -r `${XDPREFIX}/bin/xdwherepkg`/xbaydns/tools/slave/* ${XDPREFIX}/home/xbaydns/slave/prog
chmod +x ${XDPREFIX}/home/xbaydns/slave/prog/*
echo "MASTER_IP=\"$MASTERIP\"">${XDPREFIX}/home/xbaydns/slave/slave.conf

cp -r `${XDPREFIX}/bin/xdwherepkg`/xbaydns/tools/master/* ${XDPREFIX}/home/xbaydns/prog
chmod +x ${XDPREFIX}/home/xbaydns/prog/*

crontab -u xbaydns -l >${XDPREFIX}/home/xbaydns/old_crontab 2>/dev/null
crontab -u xbaydns ${XDPREFIX}/home/xbaydns/prog/crontab

#2.prepare bind's chroot
#-----------------------
mkdir -p $BINDCHROOT/{etc,dev,var/{run,dump,stats,log}}
chown -R named:named $BINDCHROOT/var/{run,dump,stats}
touch $BINDCHROOT/var/log/named.log
chown -R named:named $BINDCHROOT/var/log/named.log

rm -rf $BINDCHROOT/dev/{random,zero,null}
mknod $BINDCHROOT/dev/random c 1 8
mknod $BINDCHROOT/dev/zero c 1 5
mknod $BINDCHROOT/dev/null c 1 3

#3.set envionment variables
#==========================
echo "\
XDPREFIX=${XDPREFIX}
XBAYDNS_CHROOT_PATH=$BINDCHROOT
XBAYDNS_BIND_CONF=etc
XBAYDNS_BIND_START=${XDPREFIX}/named/sbin/named
XBAYDNS_BIND_USER=named
PATH=${PATH}:${XDPREFIX}/named/bin:${XDPREFIX}/named/sbin
export PATH XDPREFIX XBAYDNS_CHROOT_PATH XBAYDNS_BIND_CONF XBAYDNS_BIND_START XBAYDNS_BIND_USER
"|tee ${XDPREFIX}/home/xbaydns/xdenv

chmod +x ${XDPREFIX}/home/xbaydns/xdenv
source ${XDPREFIX}/home/xbaydns/xdenv
id named || useradd named -s /sbin/nologin
${XDPREFIX}/bin/xdinitbind master
chown -R named:named $BINDCHROOT
chown -R xbaydns:named ${XDPREFIX}/home/xbaydns
chmod -R 700 ${XDPREFIX}/home/xbaydns
rm -f /etc/rndc.key
ln -s $BINDCHROOT/etc/rndc.key /etc/
echo "\



XBayDNS(enabled master) installed successfully!
MASTER    :$MASTERIP
HOME      :${XDPREFIX}/home/xbaydns

Browse http://$MASTERIP username/password for administrator: admin/admin
DON'T FORGET TO CHANGE YOUR PASSWORD!
"
masterstartup
